# Application Settings
APP_NAME=AI_Agent_Framework
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Agent Configuration
DEFAULT_AGENT_NAME=DefaultAgent
MAX_AGENTS=10
AGENT_TIMEOUT=3600
TASK_INTERVAL=30

# API Keys and Authentication
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
ACCESS_TOKEN=your_access_token_here
ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_agent_db
DB_USER=postgres
DB_PASSWORD=your_db_password

# Redis Configuration (for task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Task Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=1800
TASK_RETRY_LIMIT=3
TASK_RETRY_DELAY=5

# Logging Configuration
LOG_FILE_PATH=logs/agent.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Security Settings
ENCRYPTION_KEY=your_encryption_key_here
ALLOWED_IPS=127.0.0.1,192.168.1.0/24
SSL_ENABLED=true
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# Monitoring and Metrics
ENABLE_MONITORING=true
METRICS_INTERVAL=60
ALERT_THRESHOLD=0.8

# External Services
OPENAI_API_KEY=your_openai_api_key
AZURE_CONNECTION_STRING=your_azure_connection_string
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# Cache Configuration
CACHE_TYPE=redis
CACHE_EXPIRATION=3600
CACHE_PREFIX=ai_agent

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Webhook Configuration
WEBHOOK_URL=https://your-webhook-url.com/endpoint
WEBHOOK_SECRET=your_webhook_secret

# Feature Flags
FEATURE_ASYNC_TASKS=true
FEATURE_TASK_PRIORITY=true
FEATURE_ADVANCED_LOGGING=true
FEATURE_DISTRIBUTED_TASKS=false

# Performance Tuning
THREAD_POOL_SIZE=4
CONNECTION_POOL_SIZE=10
KEEP_ALIVE_TIMEOUT=75

# Error Reporting
SENTRY_DSN=your_sentry_dsn
ERROR_NOTIFICATION_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Cleanup Settings
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400  # 24 hours
MAX_LOG_AGE=2592000    # 30 days
MAX_HISTORY_ITEMS=1000

# Custom Paths
TEMPLATE_PATH=templates
STATIC_PATH=static
UPLOAD_PATH=uploads
BACKUP_PATH=backups

# Internationalization
DEFAULT_LANGUAGE=en
TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
PROFILER_ENABLED=false
TEST_MODE=false 